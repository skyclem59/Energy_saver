<div class="container">
  <!-- ajouter un objet -->
  <h2>Ajouter un objet connect√©</h2>
  <div class="row">
    <% @devices = current_user.house.devices %>
      <% PROVIDERS.each do |provider| %>
          <div class="col-xs-12 col-sm-3 col-md-4">
            <div class="card card-signup">
              <div class="card-body card-position card-product">
                <%= link_to provider[:link] do %>
                  <%= image_tag "providers/#{provider[:image]}", class: 'img-circle img-thumbnail' %>
                  <span class="title"><%= provider[:name] %></span>
                <% end %>
                <!-- <%= link_to "Ajouter", new_device_path, class: " btn btn-primary ajout" %> -->
              </div>
            </div>
          </div>
      <% end %>
  </div>
  <!-- listing de cards -->
  <h2>Mes objets</h2>
  <%= render "shared/actions_objects", device: @devices %>
</div>
