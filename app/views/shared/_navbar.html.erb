<div class="navbar-wagon navbar-wagon-shadow">
    <!-- Logo -->
    <a href="/devices" class="navbar-wagon-brand">
      <div class="brand">
        <p>ENERGY SAVER</p>
      </div>
    </a>

    <!-- Links when logged in -->
    <% if user_signed_in? %>
      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">
        <a href="" class="navbar-wagon-item navbar-wagon-link">Temperature</a>

        <!-- Profile picture with dropdown list -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <% @avatar = "https://s3-eu-west-1.amazonaws.com/vegebase/fallback/avatar_default.png" %>
            <% @avatar = User.find(current_user.id).photo unless User.find(current_user.id)[:photo] == nil %>
            <%= image_tag @avatar, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

              <li><%= link_to "Mon profile", edit_user_registration_path %></li>
              <li><%= link_to "Ma maison" %></li>
              <li><%= link_to "Mes objets connectÃ©s" %></li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Dropdown appearing on mobile only -->
      <%= render 'shared/navbar_phone' %>

    <% else %>
      <!-- Login link (when logged out) -->
      <% @avatar = "https://s3-eu-west-1.amazonaws.com/vegebase/fallback/avatar_default.png" %>
      <%= link_to "Log in", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Dropdown appearing on mobile only -->
      <%= render 'shared/navbar_phone' %>
    <% end %>
</div>
