<div class="col-xs-12 col-sm-4">
  <div class="card card-nav-tabs">
    <div class="card-header card-header-primary">
      <h3><%= name %></h3>
    </div>
    <div class="card-body">
      <div class="chart">
        <% if multiline %>
          <%= line_chart [
          {name: "Electricité", data: graph1 },
          {name: "Solaire", data: graph2}
          ], defer: true, class: "chartsize" %>
        <% else %>
          <%= line_chart graph, defer: true, class: "chartsize" %>
        <% end %>
      </div>
    </div>
    <div class="bottom-chart">
      <%= link_to "Voir en détail", consumption_path('consumption_path(day)'), type:"button", class:"btn btn-primary" %>
    </div>
  </div>
</div>
