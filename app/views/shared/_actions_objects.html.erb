<div class="container">
  <div class="row cards">
      <% @devices.each do |device| %>
      <div class="col-md-4">
      <div class="card card-nav-tabs">
        <div class="card-header card-header-primary">
          <!-- colors: "header-primary", "header-info", "header-success", "header-warning", "header-danger" -->
          <div class="nav-tabs-navigation">
            <div class="nav-tabs-wrapper">
              <ul class="nav nav-tabs" data-tabs="tabs">
                <li class="nav-item">
                  <h4><%= device.name %></h4>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-body card-product">
          <div class="tab-content ">
            <div class="tab-pane active" >
              <% provider = PROVIDERS.find {|provider| device.name == provider[:name]} %>
              <%= image_tag "providers/#{provider[:image]}", class: 'img-circle img-thumbnail' %>
              <%= link_to "Supprimer", device_path(device.id) , method: "delete", class: "btn btn-default " %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
