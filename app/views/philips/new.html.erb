<div class="container">
  <h1>Ajouter une Lampe Philips Hue</h1>
  <%= simple_form_for(@device, :url => new_philips_path) do |f|  %>
  <%= f.input :name, required: true, autofocus: true  %>

    <div class="form-actions">
      <%= f.button :submit, "Valider" %>
      <%= link_to "Retour", devices_path, class:"btn btn-success" %>

    </div>

  <% end %>

</div>
