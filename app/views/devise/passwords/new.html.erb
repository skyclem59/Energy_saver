                <h3>Nouveau mot de passe</h3>
              </div>
              <h4>Renseignez votre mail</h4>
              <div class="card-body">
                <div class="input">
                  <%= f.input :email, required: true, autofocus: true %>
                </div>

              </div>
              <div class="card-footer">
                <div class="form-actions">
                  <%= f.button :submit, "RÃ©initialiser le mot de passe", class: "btn btn-primary" %>
                </div>
                <% end %>
                <%= render "devise/shared/links" %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
