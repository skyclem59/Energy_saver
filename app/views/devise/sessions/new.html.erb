<div class="formulaire">
    <div class="signin">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="row">
          <div class="col-xs-12 col-sm-12">
            <div class="card card-signup">
              <form class="form" method="" action="">
                <div class="card-header card-header-primary ">
                  <h3>Connexion</h3>
                </div>
                <div class="inline social-line">
                  <%- if devise_mapping.omniauthable? %>
                    <%- resource_class.omniauth_providers.each do |provider| %>
                      <%= link_to omniauth_authorize_path(resource_name, provider) do %>
                        <i class="fab fa-facebook-square fb"></i>
                      <% end %>
                    <% end -%>
                  <% end -%>
                </div>
                <div class="card-body">
                  <div class="input">
                  <%= f.input :email, label: "Email", required: false, autofocus: true %>
                  </div>
                  <div class="input">
                    <%= f.input :password, label: "Mot de passe", required: false %>
                  </div>
                  <div class="form-check">
                      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
                  </div>
                  <%= render "devise/shared/links" %>
                </div>
                <div class="card-footer">
                  <div class="form-actions">
                    <%= f.button :submit, "Connexion", class: "btn btn-primary" %>
                  </div>
                  <% end %>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
