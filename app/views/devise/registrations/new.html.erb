<div class="formulaire">
  <div class="signin">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <div class="row">
        <div class="col-xs-12 col-sm-12">
          <div class="card card-signup">
            <form class="form" method="" action="">
              <div class="card-header card-header-primary ">
                <h3>S'inscrire</h3>
              </div>
              <h4>Renseignez vos informations</h4>
              <div class="card-body">
                <div class="input">
                  <%= f.input :email, label: "Email", required: true, autofocus: true %>
                </div>
                <div class="input">
                  <%= f.input :password, label: "Mot de passe", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                </div>
                <div class="input">
                  <%= f.input :password_confirmation, label: "Confirmez votre mot de passe", required: true %>
                </div>
              </div>
              <%= render "devise/shared/links" %>
              <div class="card-footer">
                <div class="form-actions">
                  <%= f.button :submit, "S'inscrire", class: "btn btn-primary" %>
                </div>
                <% end %>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
